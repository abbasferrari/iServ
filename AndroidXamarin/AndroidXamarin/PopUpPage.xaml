<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
             x:Class="AndroidXamarin.PopUpPage">
      
     <StackLayout Spacing ="10" VerticalOptions="Start" Orientation="Vertical">
     <Entry x:Name="posting" Placeholder="Enter Some details"/>
     <Button x:Name="submit" Text="Submit"  IsEnabled="True" WidthRequest="25" HeightRequest="25" VerticalOptions="Center" />
    </StackLayout>
  </pages:PopupPage>