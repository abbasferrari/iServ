        <Button x:Name="addPhotoID" Text="Click to Edit" TextColor="Black" FontSize = "16" FontAttributes="Bold" HorizontalOptions="FillAndExpand" BackgroundColor="#d3d3d3"/>
       
        <StackLayout VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical" BackgroundColor="White" Spacing="15" >
              <Label  TextColor="#696969" FontAttributes="Bold" FontSize = "14" Text="Account Settings"   HorizontalOptions="Start"/>
      
            <StackLayout VerticalOptions="StartAndExpand" Spacing="15"  HorizontalOptions="FillAndExpand" Orientation="Horizontal" BackgroundColor="White">
            <Label x:Name="accountsettings"   TextColor="Gray" FontSize = "14" Text="Password, Personal data, Addresses, Cards and Touch ID"  HorizontalOptions="Start"/>
            <Image x:Name="accountid"  Aspect="AspectFit" HeightRequest="20" WidthRequest="20" Source="arrow_left.png" />
           
     
          </StackLayout>
        <StackLayout VerticalOptions="StartAndExpand" Spacing="20"  HorizontalOptions="FillAndExpand" Orientation="Vertical" BackgroundColor="#f9f9f9" >
          <Label Text="CONTROLS" TextColor="#696969" FontSize = "14" HorizontalOptions="Start" FontAttributes="Bold"/>
        </StackLayout>
          <StackLayout VerticalOptions="StartAndExpand" Spacing="15"  HorizontalOptions="FillAndExpand" Orientation="Horizontal" BackgroundColor="White">
              <Label Text="Geolocation" TextColor="#696969" FontSize = "14" HorizontalOptions="Start" FontAttributes="Bold"/>
        <Switch IsToggled = "True" HorizontalOptions = "EndAndExpand" IsEnabled="True" />
        </StackLayout>
        <StackLayout VerticalOptions="StartAndExpand" Spacing="15"  HorizontalOptions="FillAndExpand" Orientation="Horizontal" BackgroundColor="White">
                    <Label Text="Notification" TextColor="#696969" FontSize = "14" HorizontalOptions="Start" FontAttributes="Bold"/>
          <Switch IsToggled = "True" HorizontalOptions = "EndAndExpand"  IsEnabled="True" />
        </StackLayout>
        </StackLayout>
         
